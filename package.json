{
  "name": "polyg-mcp",
  "version": "0.0.0",
  "private": true,
  "description": "Multi-Graph Agent Memory via MCP",
  "license": "MIT",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "mcp": "PORT=4000 POLYG_MODE=http pnpm --filter @polyg-mcp/server dev",
    "agent": "POLYG_SERVER_URL=http://localhost:4000 pnpm --filter @polyg-mcp/e2e agent:interactive",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "test:e2e": "turbo run test:e2e",
    "test:coverage": "turbo run test:coverage",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/node": "^25.0.9",
    "@vitest/coverage-v8": "^2.0.0",
    "turbo": "^2.0.0",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
